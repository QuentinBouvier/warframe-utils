{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "lib": [
            "es2019",
            "dom"
        ],
        "strict": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "noImplicitAny": true,
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "strictNullChecks": false
    }
}